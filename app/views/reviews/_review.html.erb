<div class="card bg-base-100 w-full shadow-xl mb-4 mx-auto">
  <%= link_to review_path(review) do %>
    <div class="card-body">
      <p><%= l review.created_at, format: :short %></p>  
      <h2 class="card-title"><%= review.title %></h2>
      <% if review.summary.present? %>
        <p><%= review.summary.slice(0,20) %></p>
      <% else %>
        <p>レビューがまとめられていません</p>
      <% end %>
    </div>
  <% end %>
</div>

